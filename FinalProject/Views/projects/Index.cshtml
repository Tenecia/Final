@model IEnumerable<FinalProject.Models.project>

@{
    ViewBag.Title = "Index";
}
<div id="wrapper">
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                @*<h2>Index</h2>*@

                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProjectDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Screenshot)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GitHub)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Screenshot)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GitHub)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>